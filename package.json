{
  "name": "pwned",
  "version": "6.0.1-dev.0",
  "description": "A command-line tool for querying the 'Have I been pwned?' service.",
  "keywords": [
    "haveibeenpwned",
    "hibp",
    "pwned",
    "security",
    "hack",
    "dump",
    "breach",
    "pastes",
    "passwords"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "main": "bin/pwned.js",
  "bin": "bin/pwned.js",
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "scripts": {
    "build": "babel src --out-dir lib --source-maps --ignore \"**/*.test.js\",\"**/__mocks__/\"",
    "clean": "rimraf lib coverage",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "eslint .",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "cross-env NODE_ENV=test jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wKovacs64/pwned.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/pwned/issues"
  },
  "homepage": "https://wkovacs64.github.io/pwned",
  "engines": {
    "node": ">= 6.4.0"
  },
  "dependencies": {
    "hibp": "^7.0.0",
    "ora": "2.1.0",
    "prettyjson": "^1.2.1",
    "source-map-support": "^0.5.4",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.47",
    "@babel/core": "7.0.0-beta.47",
    "@babel/preset-env": "7.0.0-beta.47",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.0.0-charlie.3",
    "coveralls": "3.0.1",
    "cross-env": "5.1.6",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "lint-staged": "7.1.2",
    "prettier": "1.12.1",
    "rimraf": "2.6.2"
  }
}
