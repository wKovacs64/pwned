{
  "name": "pwned",
  "version": "4.0.4-dev.0",
  "description": "A command-line tool for querying the 'Have I been pwned?' service.",
  "keywords": [
    "haveibeenpwned",
    "hibp",
    "pwned",
    "security",
    "hack",
    "dump",
    "breach",
    "pastes",
    "passwords"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "main": "bin/pwned.js",
  "bin": "bin/pwned.js",
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "scripts": {
    "build": "babel src --out-dir lib --source-maps --ignore \"**/*.test.js\"",
    "clean": "rimraf lib coverage",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "lint": "eslint .",
    "prebuild": "npm run clean",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "cross-env NODE_ENV=test jest --config jest.config.json",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wKovacs64/pwned.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/pwned/issues"
  },
  "homepage": "https://wkovacs64.github.io/pwned",
  "engines": {
    "node": ">= 4"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "cli-spinner": "^0.2.8",
    "hibp": "^5.2.5",
    "prettyjson": "^1.2.1",
    "source-map-support": "^0.5.3",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2"
  }
}
