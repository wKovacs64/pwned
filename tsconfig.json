{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2019", // Node 12
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "noEmit": true,
    "strict": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
