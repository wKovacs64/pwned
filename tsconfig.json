{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"], // "DOM" only for msw
    "target": "ES2022", // Node 20
    "module": "NodeNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noEmit": true,

    "strict": true,
    "noImplicitOverride": true
  }
}
