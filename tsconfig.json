{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"], // "DOM" only for msw
    "target": "ES2022", // Node 18
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"],
  },
}
