{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"], // "DOM" only for msw
    "target": "ES2020", // Node 14
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "noEmit": true,
    "strict": true,
    "stripInternal": true,
    "skipLibCheck": false,
    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
