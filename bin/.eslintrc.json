{
  "extends": "airbnb-base/legacy",
  "rules": {
    "max-len": [
      "error",
      80,
      2
    ],
    "no-unused-expressions": "off",
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "arg": "param",
          "argument": "param",
          "return": "returns"
        }
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 5
  }
}
